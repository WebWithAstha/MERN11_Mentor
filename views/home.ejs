<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-100 py-5 relative">
  <div class="w-full px-4 flex items-center justify-between">
    <div class="flex border-b-2 border-zinc-800 w-full pb-2  justify-between items-center">

      <img class="h-10" src="https://cdn-icons-png.flaticon.com/512/15640/15640543.png" alt="Logo">
      <a href="/logout">
        <button class="bg-rose-500 px-4 py-1.5 rounded-xl text-white">Log Out</button>
      </a>
    </div>
    <div class="icons -mt-2 flex gap-5 items-center">
      <a href="/notification" class="relative">
        <i class="text-[1.4rem] ri-heart-3-line"></i>
      </a>
      <a href="/inbox" class="relative">
        <i class="text-[1.4rem] ri-messenger-line"></i>
      </a>
    </div>
  </div>

  <div class="story px-3 flex gap-3 overflow-auto mt-5">
